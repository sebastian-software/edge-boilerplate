{
  "name": "edge-boilerplate",
  "description": "Edge Boilerplate is a template for modern web applications. Part of the Edge Platform.",
  "version": "0.5.11",
  "main": "server/index.js",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.mjs": "eslint",
    "*.css": "stylelint",
    "*.pcss": "stylelint",
    "*.sss": "stylelint"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "mjs",
      "json"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|webp|svg|eot|otf|ttf|woff|woff2)$": "<rootDir>/__mocks__/FileMock.js",
      "\\.(css|sss|pcss)$": "identity-obj-proxy"
    }
  },
  "license": "Apache-2.0",
  "scripts": {
    "start:dev": "npm run clean && gulp start:dev",
    "start:react": "babel-node server/react.js",
    "start:static": "babel-node server/static.js",
    "build": "cross-env NODE_ENV=development gulp build",
    "prod": "npm run build && npm run start:react",
    "dev": "npm run start:dev",
    "start": "npm run start:dev",
    "now-build": "rimraf build && rimraf .cache && npm run build",
    "now-start": "npm run start:react",
    "clean": "cross-env NODE_ENV=development gulp clean",
    "test": "cross-env NODE_ENV=development gulp build && jest",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major",
    "storybook": "cross-env start-storybook -p 9001 -c .storybook",
    "styleguide": "styleguidist server",
    "styleguide:build": "styleguidist build",
    "license": "licensee --errors"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-boilerplate.git"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "babel-preset-edge": "^0.9.6",
    "babel-watch": "^2.0.7",
    "classnames": "^2.2.5",
    "cross-env": "^5.0.1",
    "edge-builder": "^0.5.0",
    "edge-postcss": "^0.7.2",
    "express": "^4.15.3",
    "fs-extra": "^3.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-router-dom": "^4.1.1",
    "react-universal-component": "^1.5.0",
    "readable-code": "^3.3.3",
    "redux": "^3.7.1",
    "rimraf": "^2.6.1",
    "source-sans-pro": "^2.0.10"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^3.1.8",
    "@storybook/addon-knobs": "^3.1.8",
    "@storybook/addon-storyshots": "^3.1.8",
    "@storybook/react": "^3.1.8",
    "gulp-cli": "^1.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest-cli": "^20.0.4",
    "licensee": "^4.4.0",
    "react-styleguidist": "^5.5.5",
    "react-test-renderer": "^15.6.1",
    "stylelint": "^7.13.0"
  }
}
