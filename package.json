{
  "name": "edge-boilerplate",
  "description": "Edge Boilerplate is a template for modern web applications. Part of the Edge Platform.",
  "version": "0.5.3",
  "main": "server/index.js",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start:dev": "npm run clean && gulp start:dev",
    "start:react": "babel-node server/react.js",
    "start:static": "babel-node server/static.js",
    "build": "gulp build",
    "prod": "npm run build && npm run start:react",
    "dev": "npm run start:dev",
    "start": "npm run start:dev",
    "now-build": "rimraf build && rimraf .cache-loader && npm run build",
    "now-start": "npm run start:react",
    "clean": "gulp clean",
    "test": "gulp build && jest",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/edge-boilerplate.git"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "babel-preset-edge": "^0.9.4",
    "babel-watch": "^2.0.6",
    "cross-env": "^5.0.1",
    "edge-builder": "^0.3.7",
    "edge-postcss": "^0.6.1",
    "express": "^4.15.3",
    "fs-extra": "^3.0.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-universal-component": "^1.4.1",
    "readable-code": "^3.3.2",
    "redux": "^3.7.1",
    "rimraf": "^2.6.1",
    "source-sans-pro": "^2.0.10"
  },
  "devDependencies": {
    "gulp-cli": "^1.3.0",
    "jest-cli": "^20.0.4",
    "stylelint": "^7.12.0"
  }
}
