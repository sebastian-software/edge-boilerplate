{
  "name": "edge-boilerplate",
  "description": "Edge Boilerplate is a template for modern web applications. Part of the Edge Platform.",
  "version": "0.4.6",
  "main": "server/index.js",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "license": "Apache-2.0",
  "scripts": {
    "start:dev": "npm run clean && cross-env NODE_ENV=development babel-watch server/dev.js",
    "start:react": "babel-node server/react.js",
    "start:static": "babel-node server/static.js",
    "build": "gulp build",
    "prod": "npm run build && npm run start:react",
    "dev": "npm run start:dev",
    "start": "npm run start:dev",
    "now-build": "rimraf build && rimraf .cache-loader && npm run build",
    "now-start": "npm run start:react",
    "clean": "gulp clean",
    "test": "gulp build && jest",
    "release": "git push && release-it --github.release --npm.publish --non-interactive",
    "release:minor": "git push && release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "git push && release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "babel-loader": "^7.1.0",
    "babel-preset-edge": "^0.6.0",
    "babel-watch": "^2.0.6",
    "babili-webpack-plugin": "^0.1.2",
    "cache-loader": "^1.0.3",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "edge-postcss": "^0.6.0",
    "express": "^4.15.3",
    "extract-css-chunks-webpack-plugin": "^1.0.15",
    "fast-async": "^6.2.2",
    "file-loader": "^0.11.2",
    "fs-extra": "^3.0.1",
    "graphql-tag": "^2.4.2",
    "html-webpack-plugin": "^2.29.0",
    "json-loader": "^0.5.4",
    "postcss-loader": "^2.0.6",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-universal-component": "^1.2.6",
    "readable-code": "^3.2.0",
    "rimraf": "^2.6.1",
    "run-sequence": "^1.2.2",
    "source-sans-pro": "^2.0.10",
    "stats-webpack-plugin": "^0.6.1",
    "uglifyjs-webpack-plugin": "^0.4.6",
    "webpack": "3.0.0",
    "webpack-dev-middleware": "^1.11.0",
    "webpack-flush-chunks": "^1.0.10",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-hot-server-middleware": "^0.1.0",
    "webpack-subresource-integrity": "^1.0.0-rc.1",
    "yaml-loader": "^0.4.0"
  },
  "devDependencies": {
    "gulp-cli": "^1.3.0",
    "jest-cli": "^20.0.4",
    "stylelint": "^7.11.1"
  }
}
