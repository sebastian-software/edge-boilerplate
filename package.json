{
  "name": "edge-boilerplate",
  "description": "Edge Boilerplate is a template for modern web applications. Part of the Edge Platform.",
  "version": "0.4.2",
  "main": "server/index.js",
  "author": {
    "name": "Sebastian Software",
    "email": "s.werner@sebastian-software.de",
    "url": "sebastian-software.de"
  },
  "pre-commit": "lint-staged",
  "lint-staged": {
    "*.js": "eslint",
    "*.css": "stylelint"
  },
  "license": "Apache-2.0",
  "scripts": {
    "dev": "npm run clean && cross-env NODE_ENV=development babel-watch server/index.js",
    "start": "cross-env NODE_ENV=production babel-node server/index.js",
    "build": "npm run clean && gulp build",
    "clean": "rimraf build/client/* build/server/*",
    "test": "gulp build && jest",
    "release": "release-it --github.release --npm.publish --non-interactive",
    "release:minor": "release-it --github.release --npm.publish --non-interactive --increment minor",
    "release:major": "release-it --github.release --npm.publish --non-interactive --increment major"
  },
  "engines": {
    "node": ">=6.0.0",
    "yarn": ">=0.21.3",
    "npm": ">=4.0.0"
  },
  "dependencies": {
    "babel-loader": "^7.1.0",
    "babel-watch": "^2.0.6",
    "babili-webpack-plugin": "^0.1.1",
    "cache-loader": "^1.0.3",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "cross-env": "^5.0.1",
    "css-loader": "^0.28.4",
    "edge-babel": "^0.4.2",
    "edge-postcss": "^0.6.0",
    "express": "^4.15.3",
    "extract-css-chunks-webpack-plugin": "^1.0.15",
    "fast-async": "^6.2.2",
    "file-loader": "^0.11.2",
    "postcss-loader": "^2.0.6",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-helmet": "^5.1.3",
    "react-intl": "^2.3.0",
    "react-redux": "^5.0.5",
    "react-router": "^4.1.1",
    "react-universal-component": "^1.2.6",
    "readable-code": "^3.0.1",
    "rimraf": "^2.6.1",
    "run-sequence": "^1.2.2",
    "source-sans-pro": "^2.0.10",
    "stats-webpack-plugin": "^0.6.1",
    "webpack": "3.0.0",
    "webpack-dev-middleware-multi-compiler": "^1.0.0",
    "webpack-flush-chunks": "^1.0.10",
    "webpack-hot-middleware": "^2.18.0",
    "webpack-hot-server-middleware": "^0.1.0"
  },
  "devDependencies": {
    "gulp-cli": "^1.3.0",
    "jest-cli": "^20.0.4"
  }
}
