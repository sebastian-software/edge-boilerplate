{
  "env": {
    "development": {
      "presets": [
        [ "env", {
          "targets": {
            "browsers": "last 2 versions",
            "node": "current"
          }
        }],
        "react"
      ],

      "plugins":
      [
        "syntax-dynamic-import",
        "transform-class-properties",

        [ "module-resolver", {
          "root": [ "src" ]
        }],

        [ "transform-object-rest-spread", { "useBuiltIns": true }]
      ]
    },

    "production": {
      "presets": [
        "env"
      ]
    }
  }
}
